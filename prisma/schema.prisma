generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CpuBrand {
  INTEL
  AMD
}

enum GpuBrand {
  INTEL
  AMD
  NVIDIA
}

enum LaunchQuarter {
  Q1
  Q2
  Q3
  Q4
}

model Cpu {
  id            String        @id @default(cuid())
  brand         CpuBrand
  name          String
  launchQuarter LaunchQuarter
  launchYear    Int
  cores         Int
  threads       Int
  frequency     Float
  cache         Int
  tdp           Int
  lithography   Int
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

enum GpuReseller {
  GIGABYTE
  EVGA
  ASUS_ROG
}

model Gpu {
  id            String        @id @default(cuid())
  brand         GpuBrand
  name          String
  reseller      GpuReseller
  launchQuarter LaunchQuarter
  launchYear    Int
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

